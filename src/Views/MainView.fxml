<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml">

    <!-- Sidebar Buttons -->
    <left>
        <VBox fx:id="buttonBox" spacing="10" style="-fx-background-color: #2c3e50;">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Button fx:id="arrayBtn" text="Array Visualizer"
                    style="-fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: #3498db;"
                    maxWidth="Infinity"/>
            <Button fx:id="linkedListBtn" text="Linked List"
                    style="-fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: #9b59b6;"
                    maxWidth="Infinity"/>
            <Button fx:id="mergeSortBtn" text="Merge Sort"
                    style="-fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: #e67e22;"
                    maxWidth="Infinity"/>
            <Button fx:id="queueBtn" text="Queue Visualizer"
                    style="-fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: #27ae60;"
                    maxWidth="Infinity"/>
            <Button fx:id="stackBtn" text="Stack Visualizer"
                    style="-fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: #c0392b;"
                    maxWidth="Infinity"/>
        </VBox>
    </left>

    <!-- Dynamic content area -->
    <center>
        <AnchorPane fx:id="contentArea"/>
    </center>
</BorderPane>
