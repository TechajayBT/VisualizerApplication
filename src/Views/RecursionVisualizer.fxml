<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.RecursionController"
            prefWidth="1200" prefHeight="800">

    <VBox spacing="15" alignment="TOP_CENTER" prefWidth="1200" prefHeight="800">
        <Label text="Factorial Recursion Tree Visualizer"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"
               alignment="CENTER"/>

        <HBox spacing="10" alignment="CENTER">
            <TextField fx:id="inputField" promptText="Enter a number â‰¤ 7" prefWidth="200"/>
            <Button text="Start" onAction="#handleStart"/>
            <Button text="Step" onAction="#handleStep"/>
            <Button text="Reset" onAction="#handleReset"/>
        </HBox>

        <!-- Fixed tree pane -->
        <Pane fx:id="treePane"
              prefHeight="600"
              prefWidth="1140"
              style="-fx-background-color: #fdfefe; -fx-border-color: gray; -fx-border-width: 1px;"/>

        <Label fx:id="resultLabel"
               style="-fx-font-size: 16px; -fx-text-fill: green;"/>
    </VBox>
</AnchorPane>
